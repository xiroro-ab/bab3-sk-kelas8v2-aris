                <div class="grid md:grid-cols-2 gap-8">
                    <div>
                        <h4 class="text-lg font-semibold mb-4 text-white">Komponen:</h4>
                        <div id="drag-items" class="space-y-3">
                            <!-- Drag items will be generated -->
                        </div>
                    </div>

                    <div>
                        <h4 class="text-lg font-semibold mb-4 text-white">Kategori:</h4>
                        <div id="drop-zones" class="space-y-3">
                            <!-- Drop zones will be generated -->
                        </div>
