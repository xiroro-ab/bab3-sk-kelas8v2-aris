    <script>
        // Global variables
        let currentQuestionIndex = 0;
        let selectedAnswers = [];
        let quizScore = 0;
        let matchingScore = 0;
        let dragScore = 0;
        let currentSlideIndex = 1;

        // Quiz questions
        const quizQuestions = [
            {
                question: "Apa yang dimaksud dengan sistem komputer?",
                options: [
                    "Hanya perangkat keras komputer",
                    "Kumpulan komponen yang bekerja sama memproses data",
                    "Program aplikasi komputer",
                    "Jaringan internet"
                ],
                correct: 1
            },
            {
                question: "Manakah yang termasuk perangkat input?",
                options: ["Monitor", "Printer", "Keyboard", "Speaker"],
                correct: 2
            },
            {
                question: "CPU adalah singkatan dari?",
                options: [
                    "Computer Processing Unit",
                    "Central Processing Unit", 
                    "Central Program Unit",
                    "Computer Program Unit"
                ],
                correct: 1
            },
            {
                question: "Manakah yang termasuk software sistem operasi?",
                options: ["Microsoft Word", "Windows", "Google Chrome", "Adobe Photoshop"],
                correct: 1
            },
            {
                question: "Brainware dalam sistem komputer adalah?",
                options: [
                    "Perangkat keras",
                    "Program komputer",
                    "Manusia pengguna komputer",
                    "Jaringan komputer"
                ],
                correct: 2
            }
        ];

        // Game data
        const matchingPairs = [
            { id: 1, text: "CPU", match: "Memproses instruksi komputer" },
            { id: 2, text: "RAM", match: "Menyimpan data sementara" },
            { id: 3, text: "Monitor", match: "Menampilkan output visual" },
            { id: 4, text: "Keyboard", match: "Memasukkan teks dan perintah" },
            { id: 5, text: "Hard Disk", match: "Menyimpan data permanen" },
            { id: 6, text: "Mouse", match: "Mengontrol pointer di layar" }
        ];

        const dragDropItems = [
            { text: "Keyboard", category: "input", color: "bg-blue-100" },
            { text: "Monitor", category: "output", color: "bg-green-100" },
            { text: "CPU", category: "process", color: "bg-purple-100" },
            { text: "Hard Disk", category: "storage", color: "bg-orange-100" }
        ];

        // Mobile menu functions
        function toggleMobileMenu() {
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.getElementById('mobile-overlay');
            
            sidebar.classList.toggle('open');
            overlay.classList.toggle('hidden');
        }
        
        // Submenu functions
        function toggleSubmenu(menuName) {
            const submenu = document.getElementById(menuName + '-submenu');
            const menuItem = event.currentTarget;
            const arrow = menuItem.querySelector('.submenu-arrow') || menuItem.querySelector('span:last-child');
            
            submenu.classList.toggle('open');
            if (arrow && arrow.textContent.includes('‚ñº')) {
                arrow.textContent = submenu.classList.contains('open') ? '‚ñ≤' : '‚ñº';
            }
        }
        
        function showLearningTopic(topicName) {
            showSection('learning');
            
            // Hide all content sections
            document.getElementById('cara-kerja-content').classList.add('hidden');
            document.getElementById('hardware-content').classList.add('hidden');
            document.getElementById('software-content').classList.add('hidden');
            document.getElementById('brainware-content').classList.add('hidden');
            
            // Show selected content
            document.getElementById(topicName + '-content').classList.remove('hidden');
            
            closeMobileMenu();
        }
        
        function showGameDirect(gameType) {
            showSection('games');
            setTimeout(() => {
                startGame(gameType);
            }, 100);
            closeMobileMenu();
        }
        
        function closeMobileMenu() {
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.getElementById('mobile-overlay');
            
            sidebar.classList.remove('open');
            overlay.classList.add('hidden');
        }

        // Navigation functions
        function showSection(sectionName) {
            document.querySelectorAll('.section-content').forEach(section => {
                section.classList.add('hidden');
            });
            
            document.getElementById(sectionName).classList.remove('hidden');
            
            document.querySelectorAll('.sidebar-nav-item').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Find and activate the correct nav item
            const navItems = document.querySelectorAll('.sidebar-nav-item');
            navItems.forEach(item => {
                if (item.textContent.includes('Beranda') && sectionName === 'home') {
                    item.classList.add('active');
                } else if (item.textContent.includes('Kuis') && sectionName === 'quiz') {
                    item.classList.add('active');
                }
            });

            if (sectionName === 'quiz') {
                loadQuiz();
            } else if (sectionName === 'games') {
                // Show games menu by default
                document.getElementById('games-menu').classList.remove('hidden');
                document.getElementById('matching-game').classList.add('hidden');
                document.getElementById('drag-drop-game').classList.add('hidden');
            }
            
            closeMobileMenu();
        }

        // Quiz functions
        function loadQuiz() {
            currentQuestionIndex = 0;
            selectedAnswers = new Array(quizQuestions.length).fill(null);
            quizScore = 0;
            
            document.getElementById('total-questions').textContent = quizQuestions.length;
            document.getElementById('quiz-result').classList.add('hidden');
            document.getElementById('quiz-container').classList.remove('hidden');
            
            loadQuestion();
        }

        function loadQuestion() {
            const question = quizQuestions[currentQuestionIndex];
            
            document.getElementById('current-question').textContent = currentQuestionIndex + 1;
            document.getElementById('question-text').textContent = question.question;
            
            const optionsContainer = document.getElementById('options-container');
            optionsContainer.innerHTML = '';
            
            question.options.forEach((option, index) => {
                const optionDiv = document.createElement('div');
                optionDiv.className = `sub-content-card p-6 cursor-pointer transition-all hover:scale-105 ${selectedAnswers[currentQuestionIndex] === index ? 'bg-blue-600 text-white' : 'hover:bg-gray-100'}`;
                optionDiv.innerHTML = `
                    <label class="flex items-center cursor-pointer">
                        <div class="w-6 h-6 rounded-full border-2 border-gray-300 mr-4 flex items-center justify-center ${selectedAnswers[currentQuestionIndex] === index ? 'border-white bg-white' : ''}">
                            ${selectedAnswers[currentQuestionIndex] === index ? '<div class="w-3 h-3 rounded-full bg-blue-600"></div>' : ''}
                        </div>
                        <span class="text-lg font-medium">${option}</span>
                    </label>
                `;
                
                optionDiv.addEventListener('click', () => selectAnswer(index));
                optionsContainer.appendChild(optionDiv);
            });
            
            updateQuizProgress();
            updateQuizButtons();
        }

        function selectAnswer(answerIndex) {
            selectedAnswers[currentQuestionIndex] = answerIndex;
            loadQuestion(); // Reload to update styling
        }

        function nextQuestion() {
            if (currentQuestionIndex < quizQuestions.length - 1) {
                currentQuestionIndex++;
                loadQuestion();
            } else {
                finishQuiz();
            }
        }

        function previousQuestion() {
            if (currentQuestionIndex > 0) {
                currentQuestionIndex--;
                loadQuestion();
            }
        }

        function updateQuizProgress() {
            const progress = ((currentQuestionIndex + 1) / quizQuestions.length) * 100;
            document.getElementById('quiz-progress').style.width = progress + '%';
        }

        function updateQuizButtons() {
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            
            prevBtn.disabled = currentQuestionIndex === 0;
            nextBtn.disabled = selectedAnswers[currentQuestionIndex] === null;
            
            if (currentQuestionIndex === quizQuestions.length - 1) {
                nextBtn.textContent = 'Selesai';
            } else {
                nextBtn.textContent = 'Selanjutnya ‚Üí';
            }
        }

        function finishQuiz() {
            quizScore = 0;
            selectedAnswers.forEach((answer, index) => {
                if (answer === quizQuestions[index].correct) {
                    quizScore++;
                }
            });
            
            const percentage = Math.round((quizScore / quizQuestions.length) * 100);
            
            document.getElementById('quiz-container').classList.add('hidden');
            document.getElementById('quiz-result').classList.remove('hidden');
            document.getElementById('final-score').textContent = `${quizScore}/${quizQuestions.length} (${percentage}%)`;
            
            let message, emoji;
            if (percentage >= 80) {
                message = "Luar biasa! Anda sangat memahami sistem komputer.";
                emoji = "üéâ";
            } else if (percentage >= 60) {
                message = "Bagus! Anda cukup memahami materi ini.";
                emoji = "üëè";
            } else {
                message = "Tetap semangat! Mari belajar lagi untuk hasil yang lebih baik.";
                emoji = "üí™";
            }
            
            document.getElementById('result-message').textContent = message;
            document.getElementById('result-emoji').textContent = emoji;
        }

        function restartQuiz() {
            loadQuiz();
        }

        // Game functions
        function startGame(gameType) {
            document.getElementById('games-menu').classList.add('hidden');
            
            if (gameType === 'matching') {
                document.getElementById('matching-game').classList.remove('hidden');
                initMatchingGame();
            } else if (gameType === 'drag-drop') {
                document.getElementById('drag-drop-game').classList.remove('hidden');
                initDragDropGame();
            }
        }

        // Matching Game
        function initMatchingGame() {
            matchingScore = 0;
            document.getElementById('match-score').textContent = matchingScore;
            document.getElementById('match-result').classList.add('hidden');
            
            const cards = [...matchingPairs.map(p => ({...p, type: 'question'})), 
                          ...matchingPairs.map(p => ({...p, type: 'answer', text: p.match}))];
            
            // Shuffle cards
            for (let i = cards.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [cards[i], cards[j]] = [cards[j], cards[i]];
            }
            
            const container = document.getElementById('matching-cards');
            container.innerHTML = '';
            
            cards.forEach(card => {
                const cardDiv = document.createElement('div');
                cardDiv.className = `p-4 sub-content-card border-2 border-gray-600 rounded-lg cursor-pointer text-center transition-all hover:shadow-lg ${card.type === 'question' ? 'bg-blue-900' : 'bg-green-900'}`;
                cardDiv.innerHTML = `<p class="font-medium text-white">${card.text}</p>`;
                cardDiv.dataset.id = card.id;
                cardDiv.dataset.type = card.type;
                
                cardDiv.addEventListener('click', () => selectMatchingCard(cardDiv));
                container.appendChild(cardDiv);
            });
        }

        let selectedMatchingCards = [];

        function selectMatchingCard(cardElement) {
            if (selectedMatchingCards.length < 2 && !cardElement.classList.contains('matched')) {
                cardElement.classList.add('border-blue-500', 'bg-blue-700');
                selectedMatchingCards.push(cardElement);
                
                if (selectedMatchingCards.length === 2) {
                    setTimeout(checkMatchingPair, 500);
                }
            }
        }

        function checkMatchingPair() {
            const [card1, card2] = selectedMatchingCards;
            const id1 = card1.dataset.id;
            const id2 = card2.dataset.id;
            const type1 = card1.dataset.type;
            const type2 = card2.dataset.type;
            
            if (id1 === id2 && type1 !== type2) {
                // Match found
                card1.classList.add('matched', 'bg-green-600');
                card2.classList.add('matched', 'bg-green-600');
                card1.classList.remove('bg-blue-700');
                card2.classList.remove('bg-blue-700');
                matchingScore++;
                document.getElementById('match-score').textContent = matchingScore;
                
                if (matchingScore === matchingPairs.length) {
                    setTimeout(() => {
                        document.getElementById('final-match-score').textContent = matchingScore;
                        document.getElementById('match-result').classList.remove('hidden');
                    }, 1000);
                }
            } else {
                // No match
                card1.classList.remove('border-blue-500', 'bg-blue-700');
                card2.classList.remove('border-blue-500', 'bg-blue-700');
                card1.classList.add('bg-red-600');
                card2.classList.add('bg-red-600');
                
                setTimeout(() => {
                    card1.classList.remove('bg-red-600');
                    card2.classList.remove('bg-red-600');
                }, 1000);
            }
            
            selectedMatchingCards = [];
        }

        function restartMatchingGame() {
            initMatchingGame();
        }

        // Drag Drop Game
        function initDragDropGame() {
            dragScore = 0;
            document.getElementById('drag-score').textContent = dragScore;
            document.getElementById('drag-result').classList.add('hidden');
            
            const itemsContainer = document.getElementById('drag-items');
            const zonesContainer = document.getElementById('drop-zones');
            
            itemsContainer.innerHTML = '';
            zonesContainer.innerHTML = '';
            
            // Create drag items
            const shuffledItems = [...dragDropItems].sort(() => Math.random() - 0.5);
            shuffledItems.forEach(item => {
                const itemDiv = document.createElement('div');
                itemDiv.className = `p-3 ${item.color} border-2 border-gray-300 rounded-lg text-center font-medium cursor-grab sub-content-card`;
                itemDiv.textContent = item.text;
                itemDiv.draggable = true;
                itemDiv.dataset.category = item.category;
                
                itemDiv.addEventListener('dragstart', handleDragStart);
                itemsContainer.appendChild(itemDiv);
            });
            
            // Create drop zones
            const categories = [
                { name: 'input', label: 'Input Device', color: 'bg-blue-900 border-blue-600' },
                { name: 'output', label: 'Output Device', color: 'bg-green-900 border-green-600' },
                { name: 'process', label: 'Processing Unit', color: 'bg-purple-900 border-purple-600' },
                { name: 'storage', label: 'Storage Device', color: 'bg-orange-900 border-orange-600' }
            ];
            
            categories.forEach(category => {
                const zoneDiv = document.createElement('div');
                zoneDiv.className = `p-4 ${category.color} border-2 border-dashed rounded-lg text-center min-h-16 flex items-center justify-center sub-content-card`;
                zoneDiv.innerHTML = `<span class="font-medium text-white">${category.label}</span>`;
                zoneDiv.dataset.category = category.name;
                
                zoneDiv.addEventListener('dragover', handleDragOver);
                zoneDiv.addEventListener('drop', handleDrop);
                zonesContainer.appendChild(zoneDiv);
            });
        }

        let draggedElement = null;

        function handleDragStart(e) {
            draggedElement = e.target;
            e.target.style.opacity = '0.5';
        }

        function handleDragOver(e) {
            e.preventDefault();
            e.target.closest('.sub-content-card').classList.add('scale-105');
        }

        function handleDrop(e) {
            e.preventDefault();
            const dropZone = e.target.closest('.sub-content-card');
            dropZone.classList.remove('scale-105');
            
            if (draggedElement && dropZone.dataset.category === draggedElement.dataset.category) {
                dropZone.innerHTML = `<span class="font-medium text-green-300">‚úì ${draggedElement.textContent}</span>`;
                draggedElement.remove();
                dragScore++;
                document.getElementById('drag-score').textContent = dragScore;
                
                if (dragScore === 4) {
                    setTimeout(() => {
                        document.getElementById('drag-result').classList.remove('hidden');
                    }, 500);
                }
            }
            
            if (draggedElement) {
                draggedElement.style.opacity = '1';
                draggedElement = null;
            }
        }

        function restartDragDropGame() {
            initDragDropGame();
        }

        // Hardware Slide Functions
        function nextSlide() {
            if (currentSlideIndex < 11) {
                currentSlideIndex++;
                showSlide(currentSlideIndex);
            }
        }

        function previousSlide() {
            if (currentSlideIndex > 1) {
                currentSlideIndex--;
                showSlide(currentSlideIndex);
            }
        }

        function showSlide(slideNumber) {
            // Hide all slides
            document.querySelectorAll('.hardware-slide').forEach(slide => {
                slide.classList.add('hidden');
            });
            
            // Show current slide
            const currentSlide = document.querySelector(`[data-slide="${slideNumber}"]`);
            if (currentSlide) {
                currentSlide.classList.remove('hidden');
            }
            
            // Update slide counter
            document.getElementById('current-slide').textContent = slideNumber;
            
            // Update progress bar
            const progress = (slideNumber / 11) * 100;
            document.getElementById('slide-progress').style.width = progress + '%';
            
            // Update navigation buttons
            const prevBtn = document.getElementById('prev-slide');
            const nextBtn = document.getElementById('next-slide');
            
            prevBtn.disabled = slideNumber === 1;
            nextBtn.disabled = slideNumber === 11;
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            showSection('home');
            showSlide(1); // Initialize first slide
            
            // Mobile menu event listeners
            document.getElementById('mobile-menu-btn').addEventListener('click', toggleMobileMenu);
            document.getElementById('mobile-overlay').addEventListener('click', closeMobileMenu);
        });
    </script>
