                            <button onclick="showSection('games')" class="btn-elegant" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
                                üéÆ Main Game
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Games Section -->
        <section id="games" class="section-content hidden">
            <!-- Matching Game -->
            <div id="matching-game" class="content-card rounded-xl p-8 shadow-lg hidden">
                <div class="flex justify-between items-center mb-6">
                    <button onclick="showSection('games')" class="text-blue-300 hover:text-blue-100">‚Üê Kembali ke Menu Game</button>
                    <h3 class="text-2xl font-bold text-white">Tebak Komponen</h3>
                    <div class="text-lg font-semibold text-blue-300">Skor: <span id="match-score">0</span></div>
                </div>
                
                <div class="text-center mb-6">
                    <p class="text-gray-300">Klik pada kartu yang cocok!</p>
                </div>

                <div id="matching-cards" class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <!-- Cards will be generated dynamically -->
                </div>

                <div id="match-result" class="hidden mt-6 text-center">
                    <h4 class="text-xl font-bold mb-4 text-white">Permainan Selesai!</h4>
                    <p class="text-lg mb-4 text-gray-300">Skor Akhir: <span id="final-match-score" class="font-bold text-purple-300"></span></p>
                    <button onclick="restartMatchingGame()" class="bg-gradient-to-r from-violet-800 to-purple-900 text-white px-6 py-3 rounded-lg hover:from-violet-700 hover:to-purple-800 transition-colors">
