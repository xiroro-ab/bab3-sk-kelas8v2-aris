            <!-- Games Menu -->
            <div id="games-menu" class="text-center">
                <h2 class="text-3xl font-bold text-white mb-4">Game Edukatif</h2>
                <p class="text-gray-300 mb-8">Belajar sambil bermain dengan game interaktif</p>

                <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
                    <div class="content-card rounded-xl p-6 shadow-lg text-center cursor-pointer hover:scale-105 transition-transform" onclick="startGame('matching')">
                        <div class="text-5xl mb-4">üéØ</div>
                        <h3 class="text-xl font-semibold mb-3 text-white">Tebak Komponen</h3>
                        <p class="text-gray-300 mb-4">Cocokkan komponen dengan fungsinya</p>
                        <button class="bg-gradient-to-r from-violet-800 to-purple-900 text-white px-6 py-2 rounded-lg hover:from-violet-700 hover:to-purple-800 transition-colors">
                            Main Sekarang
